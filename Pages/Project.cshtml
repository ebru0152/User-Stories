@page
@model User_Stories_part_4.Pages.ProjectModel
@{
}

<h1>Create new project</h1>

<form asp-page-handler="create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" id="Title" placeholder="Enter project name">
    </div>
    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">Create new project</button>
</form>

<br />
<br />
<br />

<h1>Choose project</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <select asp-for="@Model.ID" class="form-select">
                    @foreach (var item in Services.StoryboardService.storyBoardProjects)
                    {
                        <option value="@item.ID">@item.ProjectName</option>

                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>