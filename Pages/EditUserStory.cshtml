@page  "{id:int}"
@model User_Stories_part_4.Pages.EditUserStoryModel
@{
}

<h1>Edit user story</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.UserStory.Id" />
            <div class="form-group">
                <label asp-for="@Model.UserStory.Title" class="control-label">Title</label>
                <input asp-for="@Model.UserStory.Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.Description" class="control-label">Description</label>
                <input asp-for="@Model.UserStory.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.BusinessValue" class="control-label">Business Value</label>
                <input asp-for="@Model.UserStory.BusinessValue" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.Priority" class="control-label">Priority</label>
                <input asp-for="@Model.UserStory.Priority" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserStory.StoryPoints" class="control-label">Story Points</label>
                <input asp-for="@Model.UserStory.StoryPoints" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.UserStory.AssignedPerson" class="control-label">Assigned Person</label>
                <input asp-for="@Model.UserStory.AssignedPerson" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.UserStory.CurrentStatus" class="control-label">Current Status</label>

                <select asp-for="@Model.UserStory.CurrentStatus" class="form-select">
                    <option selected value="">@Model.UserStory.CurrentStatus</option>
                    <option disabled="disabled">----</option>
                    @foreach (var item in Models.UserStory.GetStatusList())
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="/UserStories">Back to list</a>
</div>